<Window x:Class="windows_full_widget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="System Monitor Widget" Height="120" Width="200" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Topmost="True">
    <Grid Background="White" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <StackPanel>
            <TextBlock x:Name="CpuUsageText" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="14"/>
            <TextBlock x:Name="GpuUsageText" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="14"/>
            <TextBlock x:Name="GpuTempText" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="14"/>
            <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Click="CloseButton_Click" Margin="0,-50,0,0"/>
        </StackPanel>
    </Grid>
</Window>